<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/completedTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25px"
        android:layout_marginTop="25px">

        <ImageView
            android:id="@+id/taskDonePhoto"
            android:layout_width="512px"
            android:layout_height="512px"
            android:src="@mipmap/ic_task_done_def_foreground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/taskDonePhoto"
            android:layout_toRightOf="@+id/taskDonePhoto">

            <TextView
                android:id="@+id/taskDoneName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:layout_marginLeft="20px"
                android:layout_toEndOf="@+id/taskDonePhoto"
                android:layout_toRightOf="@+id/taskDonePhoto"
                android:text="Name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/taskDoneCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/taskDoneName"
                android:layout_marginTop="20px"
                android:layout_marginLeft="20px"
                android:layout_toEndOf="@+id/taskDonePhoto"
                android:layout_toRightOf="@+id/taskDonePhoto"
                android:text="Caption"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/taskDoneLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/taskDoneName"
                android:layout_marginTop="20px"
                android:layout_marginLeft="20px"
                android:layout_toEndOf="@+id/taskDonePhoto"
                android:layout_toRightOf="@+id/taskDonePhoto"
                android:text="Location"
                android:textSize="15sp" />

        </LinearLayout>

